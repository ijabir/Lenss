<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.ijabi.lenss.Main2Activity">

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\n\t\t\t\tIs your f ... ?"
        android:textSize="40sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Greater than 2f"
            android:gravity="center"
            android:onClick="f2pp"
            android:textSize="40sp"
            android:id="@+id/button1"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equal to 2f"
            android:gravity="center"
            android:onClick="f2"
            android:textSize="40sp"
            android:id="@+id/button2"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Between f and 2f"
            android:gravity="center"
            android:onClick="bf2f"
            android:textSize="40sp"
            android:id="@+id/button3"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equal to f"
            android:gravity="center"
            android:onClick="f"
            android:textSize="40sp"
            android:id="@+id/button4"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Less than f"
            android:gravity="center"
            android:onClick="lf"
            android:textSize="40sp"
            android:id="@+id/button5"/>
    </LinearLayout>

</LinearLayout>
